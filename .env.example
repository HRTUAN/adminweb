# Application
NODE_ENV=development
PORT=8080
TRUST_PROXY=1
SESSION_SECRET=change_me_to_a_long_random_string

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=appdb
DB_PORT=3306
DB_CONN_LIMIT=10
DB_SSL=false

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Security
ENABLE_RECAPTCHA=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
# If you use reCAPTCHA, CSP must allow Google domains. See helmet config.

# CSP optional allowlists (space-separated)
CSP_SCRIPT_SRC=https://cdn.jsdelivr.net
CSP_IMG_SRC=
CSP_STYLE_SRC=
